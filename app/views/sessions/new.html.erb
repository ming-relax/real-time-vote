<%= form_tag "/login", method: "post", class: "form-inline", role: "form", id: "signup" do %>
    <div class="form-group">
      <label for="inputWeibo3" class="col-md-1 col-md-offset-4 control-label"></label>
        <input type="email" class="form-control" id="inputWeibo3" placeholder="邮箱" name="user[email]">
    </div>

    <div class="form-group">
      <label for="inputPassword3" class="col-md-1 col-md-offset-4 control-label"></label>
        <input type="password" class="form-control" id="inputPassword3" placeholder="密码" name="user[password]">
    </div>

    <button type="submit" class="btn btn-primary" id="signin-btn">登录</button>
    <a class="btn btn-primary" id="signup-btn" href="/">注册</a>
      
<% end %>