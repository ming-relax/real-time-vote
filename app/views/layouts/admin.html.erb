    <ul class="nav navbar-nav">
      <% if current_user %>
      <li><a>Welcome <%= current_user.username %></a></li>
        <li><a href="/admin">Admin</a></li>
      <% end %>
    </ul>
  </div>
</div>
  <%= yield %>

