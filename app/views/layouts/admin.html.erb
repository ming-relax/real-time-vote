  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <a class="navbar-brand " href="/vote/index">Vote for Money</a>
  </div>
