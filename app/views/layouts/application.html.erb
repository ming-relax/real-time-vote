<!DOCTYPE html>
<html>

<head>
  <title>RealtimeVote</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2"></div>
    <h1 class="text-center col-md-8">Vote</h1>
    <div class="col-md-2">
      <% if logged_in? %>
        <% if current_user.admin? %>
          <%= link_to "Admin", "/admin", class: "btn btn-default" %>
        <% end %>
      <%= link_to "注销", logout_path, method: :delete, class: "btn btn-default" %>
      <% end %>
    </div>

  </div>
  <!-- <img src="/images/landing.jpg" class="img-responsive" alt="Responsive image"> -->
  <div class="main">
    <%= yield %>
  </div>
  

  <div class="footer">
    Designed by Ming
  </div>
</div>
</body>
</html>
